<article class="post">
  <div class="title">
    <h2><a href="/post/{{id}}">{{title}}</a></h2>
    <span>{{post_contents}}</span>
  </div>
  <div class="meta">
    by
    {{user.username}}
    on
    {{format_date created_at}}
    |
    <a href="/post/{{id}}">{{comments.length}}
      {{format_plural "comment" comments.length}}</a>
  </div>
</article>